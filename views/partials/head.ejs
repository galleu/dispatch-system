<style type="text/css">
:root {
    --background: #17191a;
    --text: #fff;
    --obj: #454647;
}

html, body {
    background: url("https://cdn.digitaltek.net/imagedoc-darknoise.png");
    background-color: var(--background);
    color: var(--text);
    margin: 0;
    font-family: Verdana, Helvetica, sans-serif;
}

nav {
    display: flex;
    justify-content: space-between;
    padding: 15px 10px;
}

nav button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 18px;
    outline: none;
    color: var(--text);
    padding: 4px 15px; 
}
nav button:hover {
    opacity: 60%;
    border-bottom: 2px solid #fff;
}
nav .active {
    border-bottom: 2px solid #fff;
}

.tabs {
    text-align: center;
}



.player-list tbody {
	text-align: center;
	display: block;
	max-width: 800px;
	margin: auto;
}


.player-list  {
    display: block;
    text-align: center;
    margin: 0 auto;
    overflow: hidden;
}

.player-list tr {
    display: block;
    border-radius: 10px;
    background-color: var(--background);
    text-align: center;
    margin: 0 auto;
    margin: 10px;
    padding: 15px;
}

.player-list td {
    display: block;
}

.player-list input, .player-list select {
    all: unset;
    text-align: left;
    font-size: 0.8rem;
    background: var(--obj);
    border-radius: 4px;
    color: #fff;
    width: 150px;
    height: 30px;
    padding: 0 10px;
    margin: 5px;
    border: none;
    outline: none;
}

select:hover {
    cursor: pointer;
}

label.input-unit {
  position: relative;
}

label.input-unit span {
  position: absolute;
  top: 0;
  right: 40px;
}


table {
    margin-left: auto;
    margin-right: auto;
}


.dispatch-table {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 90%;
    max-width: 950px;
}

.dispatch-table td, .dispatch-table th {
    border: 1px solid #ddd;
    padding: 8px;
    user-select: none;
}

.dispatch-table tr:nth-child(even){background-color: #454647;}

.dispatch-table tr:hover { opacity: 65%; }

.dispatch-table th {
    padding: 6px 10px;
    text-align: left;
    background-color: var(--background);
    color: var(--text);
}


</style>